{
  "id": "org.taisei_project.Taisei",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "18.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "taisei",
  "rename-icon": "taisei",
  "rename-desktop-file": "taisei.desktop",
  "finish-args": [
    "--socket=pulseaudio",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--share=ipc",
    "--device=all"
  ],
  "modules": [
    {
    "name": "libzip",
    "buildsystem": "cmake-ninja",
    "cleanup": [ "/bin", "/share" ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/nih-at/libzip/archive/rel-1-5-1.tar.gz",
          "sha256": "3ca79ff6b9a02b3e3bcf0b45f30a8159c3146658f57c8b6be0a370eabd3db071"
        }
      ]
    },
    {
      "name": "taisei",
      "config-opts": [
        "-Ddocs=false"
      ],
      "buildsystem": "meson",
      "sources": [
        {
          "type": "file",
          "path": "org.taisei_project.Taisei.appdata.xml"
        },
        {
          "type": "archive",
          "url": "https://github.com/taisei-project/taisei/releases/download/v1.3/taisei-v1.3.tar.xz",
          "sha256": "4d6ede1e8a512eedec76cc9105022b0f5a361d23841ec1607d06a22c170b843a"
        }
      ],
      "post-install": [
        "install -Dm644 ../org.taisei_project.Taisei.appdata.xml /app/share/appdata/org.taisei_project.Taisei.appdata.xml"
      ]
    }
  ]
}
